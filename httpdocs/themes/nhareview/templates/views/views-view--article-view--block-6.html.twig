                            <div class="date">{{ items[2].date | date('d/m/Y') }}</div>
                        </div>
                    </article>
                    {% endif %}
                </div>
                <div class="col-md-6 col_nr">
                    {% if items[3] is defined %}
                    <article class="article_item item_bot">
                        <div class="img">
                            <img class="lazy" width="325" height="250" data-original="{{ items[3].uri | image_style('images_325_x_250') }}" alt="{{ items[3].alt }}">
                        </div>
                        <div class="inner">
                            <a class="category" href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': items[3].term_id}) }}">{{ items[3].term_name }}</a>
                            <a href="{{ items[3].link }}"><h2 class="article_title text_3_line">{{ items[3].title }}</h2></a>
                            <div class="date">{{ items[3].date | date('d/m/Y') }}</div>
                        </div>
                    </article>
                    {% endif %}
                </div>
            </div>
            
        </div>
    </div>
</div>
{{ attach_library('nhareview/article-trending') }}
<div class="article_trending block_content">
    <div class="block_header">
        <h2 class="block_title">{{ 'Xu hướng' | t }}</h2>
    </div>
    <div class="main_block">
        {% for item in items %}
        <div class="trending_item">
            <div class="row">
                <div class="col-md-4 pr-0">
                    <a href="{{ item.link }}"><img src="{{ item.uri | image_style('images_325_x_200') }}" alt="{{ item.alt }}"></a>
                </div>
                <div class="col-md-8">
                    <a href="{{ item.link }}"><h2 class="trending_title text_2_line">{{ item.title }}</h2></a>
                    <div class="date"><i class="far fa-clock"></i> {{ item.date | date('d/m/Y') }}</div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>